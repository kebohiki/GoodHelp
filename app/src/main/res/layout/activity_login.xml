<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_background"
    tools:context="com.wangw.goodhelp.ui.activitys.LoginActivity">

    <include layout="@layout/layout_titlebar"/>

    <EditText
        android:id="@+id/ev_username"
        android:layout_marginTop="@dimen/padding_30"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_30"
        android:padding="5dp"
        android:maxLength="11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入用户名"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:textSize="16sp"
        android:drawableLeft="@mipmap/login_user_icon"
        android:background="@drawable/shape_edittext_backgroud"/>
    <EditText
        android:id="@+id/ev_userpwd"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_30"
        android:layout_marginTop="@dimen/padding_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:drawableLeft="@mipmap/login_secret_icon"
        android:background="@drawable/shape_edittext_backgroud"/>
    
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="登录"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/padding_30"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_30"
        android:textColor="@color/title_bg"
        android:background="@drawable/shape_button_backgroud"/>

    <TextView
        android:id="@+id/tv_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/title_bg"
        android:text="查看《用户手册》"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/padding_30"/>


</LinearLayout>
